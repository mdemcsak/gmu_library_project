<div id="sidebar">
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Things to do...</h3>
  </div>
  <div class="panel-body">
    <p>
      <%= link_to books_path, class: 'btn btn-default col-md-12' do %>
        <span class="pull-left glyphicon glyphicon-list-alt"></span> All Books
      <% end %>
    </p>
      <p>
      <% if session[:admin] %>
        <%= link_to new_book_path, class: 'btn btn-default col-md-12' do %>
          <span class="pull-left glyphicon glyphicon-plus-sign"></span> New Book
        <% end %>
      <% end %>
    </p>
    <p>
      <%= link_to authors_path, class: 'btn btn-default col-md-12' do %>
        <span class="pull-left glyphicon glyphicon-user"></span> Authors
      <% end %>
    </p>
    <p> 
      <%= link_to reservations_path, class: 'btn btn-default col-md-12' do %>
        <span class="pull-left glyphicon glyphicon-barcode"></span> My Reservations
      <% end %>
    </p>
    <p>
      <% if session[:admin] %> 
        <%= link_to overdue_reservations_path, class: 'btn btn-default col-md-12' do %>
          <span class="pull-left glyphicon glyphicon-save"></span> Overdue Books
        <% end %>
      <%end %>
    </p>
    <p> 
      <%= link_to sessions_path, method: :delete, class:  'btn btn-default col-md-12' do %>
        <span class="pull-left glyphicon glyphicon-off"></span> Logout
      <% end %>
    </p>
  </div>
</div>
</div>
